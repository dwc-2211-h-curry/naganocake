<div class="container mt-5">
  <div class="row">
    <div class="col-1 ml-1"></div>
    <div class="col-3">
      <h4>管理者ログイン</4>
    </div>
  </div>

  <div>
    <%= flash[:notice] %>
  </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="row mt-3">
      <div class="col-3"></div>
      <div class="col-2">
        <%= f.label :"メールアドレス" %>
      </div>
      <div class="col-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", size:"50" %>
      </div>
    </div>

    <div class="row mt-3">
      <div class="col-3"></div>
      <div class="col-2">
        <%= f.label :"パスワード" %>
      </div>
      <div class="col-3">
        <%= f.password_field :password, autocomplete: "current-password", size:"50" %>
      </div>
    </div>

    <div class="row mt-5 ">
      <div class="col-5 mb-5"></div>
      <div class="col-2 mb-5">
        <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
      </div>
    </div>
  <% end %>
</div>

<%= render "admin/shared/links" %>
