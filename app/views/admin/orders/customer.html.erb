<div class="col-4 offset-1 mt-4">
  <h4 class="col-8 text-center" style="background:#ddd">
    <strong><%= @customer.last_name + @customer.first_name %></strong>さんの<strong>注文履歴</strong>
  </h4>
</div>
<div class="container">
  <table class="table">
    <thead class="table-secondary">
      <tr>
        <th class="text-center">購入日時</th>
        <th style="width: 20%">注文個数</th>
        <th>注文ステータス</th>
      </tr>
    </thead>
    <% @orders.each do |order| %>
      <tbody>
        <tr>
          <td class="text-center">
            <%= link_to admin_order_path(order.id), class:"text-dark" do %>
              <%= l order.created_at, format: :long %>
            <% end %>
          </td>
          <td><%= order.order_details.sum(:quantity) %></td>
          <td><%= order.order_status_i18n %></td>
        </tr>
      </tbody>
    <% end %>

  </table>

  <!--ページネーション追加-->
  <div class="col-md-5"></div>
    <div class="col-md-2 mx-auto text-left">
      <%= paginate @orders %>
    </div>
  <div class="col-md-5"></div>
</div>