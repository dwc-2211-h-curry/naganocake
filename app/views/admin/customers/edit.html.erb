<div class="container">
  <div class="m-md-2"><br></div>
  <div class="row">
    <div class="col-md-2"></div>
    <h4 class="col-md-2 mx-auto text-center">
      <strong><%= @customer.last_name + @customer.first_name %>さんの会員情報編集</strong>
    </h4>
    <div class="col-md-8"></div>
  </div>

  <div class="m-md-2"><br></div>
    <%= form_for(@customer, url: {controller: 'admin/customers', action: 'update'}) do |f| %>

      <div class="information row">
        <div class="col-md-1"></div>
        <div class="col-md-3 text-left">会員ID </div>
        <div class="col-md-8"><%= @customer.id %></div>
      </div>

      <div class="form-group row">
        <div class="col-md-1"></div>
        <div class="col-md-3 text-left"><%= f.label :name, '氏' %></div>
        <div class="col-md-8"><%= f.text_field :last_name, placeholder: "氏", required: true, size: "10" %></div>
      </div>

      <div class="form-group row">
        <div class="col-md-1"></div>
        <div class="col-md-3 text-left"><%= f.label :name, '名' %></div>
        <div class="col-md-8"><%= f.text_field :first_name, placeholder: "名", required: true, size: "10" %></div>
      </div>

      <div class="form-group row">
        <div class="col-md-1"></div>
        <div class="col-md-3 text-left"><%= f.label :name, '名' %></div>
        <div class="col-md-8"><%= f.text_field :last_name_kana, placeholder: "名", required: true, size: "10" %></div>
      </div>

      <div class="form-group row">
        <div class="col-md-1"></div>
        <div class="col-md-3 text-left"><%= f.label :name, '名' %></div>
        <div class="col-md-8"><%= f.text_field :first_name_kana, placeholder: "名", required: true, size: "10" %></div>
      </div>

      <div class="form-group row">
        <div class="col-md-1"></div>
        <div class="col-md-3 text-left"><%= f.label :postcode, '郵便番号', required: true, size: "10" %></div>
        <div class="col-md-8"><%= f.text_field :postcode, required: true %></div>
      </div>

       <div class="form-group row">
        <div class="col-md-1"></div>
        <div class="col-md-3 text-left"><%= f.label :address, '住所' %></div>
        <div class="col-md-8"><%= f.text_field :address, required: true %></div>
      </div>

       <div class="form-group row">
        <div class="col-md-1"></div>
        <div class="col-md-3 text-left"><%= f.label :phone_number, '電話番号' %></div>
        <div class="col-md-8"><%= f.telephone_field :phone_number, required: true %></div>
      </div>

       <div class="form-group row">
        <div class="col-md-1"></div>
        <div class="col-md-3 text-left"><%= f.label :email, 'メールアドレス' %></div>
        <div class="col-md-8"><%= f.email_field :email, required: true %></div>
      </div>

       <div class="form-group row">
         <div class="col-md-1"></div>
         <div class="col-md-3 text-left">会員ステータス</div>
         <div class="col-md-8">
           <%= f.radio_button :is_deleted, false %>
           <%= f.label :is_deleted, '有効' %>

           <%= f.radio_button :is_deleted, true %>
           <%= f.label :is_deleted, '退会' %>
         </div>
       </div>

    <div class="row">
      <div class="action center-block mx-auto">
        <%= f.submit '変更を保存', class: "btn btn-success" %>
      </div>
    <% end %>
    </div>


  </div>
</div>