<h4>注文履歴一覧</h4>

<table class="table">
  <thead>
    <tr>
      <th>購入日時</th>
      <th>購入者</th>
      <th>注文個数</th>
      <th>注文ステータス</th>
    </tr>
  </thead>
  <% @orders.each do |order| %>
    <tbody>
      <tr>
        <td>
          <%= link_to admin_order_path(order.id) do %>
            <%= l order.created_at_i18n %>
          <% end %>
        </td>
        <td><%= order.customer.last_name+first_name %></td>
        <td><%= order.order_detail.quantity %></td>
        <td><%= order.product_status_i18n %></td>
      </tr>
    </tbody>
  <% end %>
</table>