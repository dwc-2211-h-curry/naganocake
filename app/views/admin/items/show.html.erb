<div class="container">
  <div class="m-md-2"><br></div>
  <div class="row">
    <div class="col-md-2"></div>
    <h4 class="col-md-2 mx-auto text-center">
      <strong>商品詳細</strong>
    </h4>

    <div class="col-md-8"></div>
  </div>

  <div class="m-md-2"><br></div>

    <div class="row">
      <div class="col-md-5 mx-auto">
        <%= image_tag @item.image, size:'400x300' %>
    </div>
    <div class="col-md-7 mx-auto">
      <table class="information">
        <tr>
          <th>商品名</th>
          <!-- 下の記号はノーブレイクスペースと読みます -->
          <td>&nbsp;&nbsp;&nbsp;</td>
          <td><%= @item.name %></td>
        </tr>

        <td class="m-md-1"><br></td>

        <tr>
          <th>商品説明</th>
          <td>&nbsp;&nbsp;&nbsp;</td>
          <td><%= @item.introduction %></td>
        </tr>

        <td class="m-md-1"><br></td>

        <tr>
          <th>ジャンル</th>
          <td>&nbsp;&nbsp;&nbsp;</td>
          <td><%= @item.genre.genre_name %></td>
        </tr>

        <td class="m-md-1"><br></td>

        <tr>
          <th>税込価格</br>
              (税抜価格)</th>
          <td>&nbsp;&nbsp;&nbsp;</td>
          <td><%= @item.add_tax_price.to_s(:delimited) %>
              (<%= @item.price.to_s(:delimited) %>)円</td>
        </tr>

        <td class="m-md-1"><br></td>

        <tr>
          <th>販売ステータス</th>
          <td>&nbsp;&nbsp;&nbsp;</td>
          <% if @item.is_active == true %>
            <td class="text-success">
              <strong><%= '販売中' %></strong>
            </td>
          <% else %>
            <td class="text-secondary">
              <strong><%= '販売中' %></strong>
            </td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>

  <div class="m-md-1"><br></div>

  <div class="row">
    <div class="action center-block mx-auto">
      <%= link_to '編集する',edit_admin_item_path(@item), class: 'btn btn-success' %>
    </div>
  </div>
</div>