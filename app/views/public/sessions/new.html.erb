<div class="container mt-5">
  <div class="text-center">
    <strong>
      <%= flash[:alert] %>
    </strong>
  </div>
  <div class="row">
    <div class="col-1"></div>
    <div class="col-2 ml-5 pl-4">
      <h4>ログイン</4>
    </div>
  </div>
    <div class="row mt-4">
      <div class="col-2"></div>
      <div class="col-3">
        <p style="text-align">会員の方はこちらからログイン</p>
      </div>
    </div>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

  <div class="row mt-3">
    <div class="col-3"></div>
    <div class="col-2">
      <%= f.label :"メールアドレス" %>
    </div>
    <div class="col-3">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", size:"50" %>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-3"></div>
    <div class="col-2">
      <%= f.label :"パスワード" %>
    </div>
    <div class="col-3">
      <%= f.password_field :password, autocomplete: "current-password", size:"50" %>
    </div>
  </div>

  <div class="row mt-5 ">
    <div class="col-5 mb-5"></div>
    <div class="col-2 mb-5">
      <%= f.submit "ログイン", class: "btn btn-primary btn-block" %>
    </div>
  </div>
<% end %>

  <div class="row mt-5">
    <div class="col-2"></div>
    <div class="col-3">
      <p style="text-align:center;">会員登録がお済みでない方</p>
    </div>
  </div>

  <div class="row mt-2 mb-5">
    <div class="col-3 mb-5"></div>
    <div class="col-4 mb-5">
      <%= link_to "こちら",new_customer_registration_path %>から新規登録を行ってください。
    </div>
    </div>
  </div>
</div>