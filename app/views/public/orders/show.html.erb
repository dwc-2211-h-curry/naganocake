<h4>注文履歴詳細</h4>

<h6><strong>注文情報</strong></h6>
<table class="table">
  <tr>
    <td>注文日</td>
    <td><%= l @order.created_at %></td>
  </tr>
  <tr>
    <td>配送先</td>
    <td>
      〒<%= @order.shipping_postal_code %><br>
      <%= @order.shipping_address %><br>
      <%= @order.shipping_name %>
    </td>
  </tr>
  <tr>
    <td>支払方法</td>
    <td><%= @order.payment_way_i18n %></td>
  </tr>
  <tr>
    <td>ステータス</td>
    <td><%= @order.order_status_i18n %></td>
  </tr>
</table>


  <h6><strong>注文内容</strong></h6>
  <table class="table">
    <thead>
      <tr>
        <td>商品</td>
        <td>単価（税込）</td>
        <td>個数</td>
        <td>小計</td>
      </tr>
    </thead>
    <% @sum = 0 %>
    <% @order_details.each do |order_detail| %>
      <% @sum += order_detail.purchase_price * order_detail.quantity %>
        <tbody>
          <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.purchase_price %></td>
            <td><%= order_detail.quantity %></td>
            <td><%= order_detail.purchase_price * order_detail.quantity %></td>
          </tr>
        </tbody>
    <% end %>
  </table>

  <h6><strong>請求情報</strong></h6>
  <table class="table">
    <tr>
      <td>商品合計</td>
      <td><%= @sum %></td>
    </tr>
    <tr>
      <td>配送料</td>
      <td><%= @order.postage %></td>
    </tr>
    <tr>
      <td>ご請求額</td>
      <td><%= @order.total %></td>
    </tr>
  </table>
