<h2>Sign up</h2>

<div>
  <%= flash[:notice] %>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>


  <div class="field">
    <%= f.label :姓 %><br/>
    <%= f.text_field :last_name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :名 %><br/>
    <%= f.text_field :first_name, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :セイ %><br/>
    <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :メイ %><br/>
    <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "name" %>
  </div>

  <div class="field">
    <%= f.label :メールアドレス %><br/>
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :郵便番号（ハイフンなし） %><br/>
    <%= f.text_field :postcode, autofocus: true, autocomplete: "postal-code" %>
  </div>

  <div class="field">
    <%= f.label :住所 %><br/>
    <%= f.text_field :address, autofocus: true, autocomplete: "street-address" %>
  </div>

  <div class="field">
    <%= f.label :電話番号（ハイフンなし） %><br/>
    <%= f.telephone_field :phone_number, autofocus: true, autocomplete: "tel" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br/>
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "public/shared/links" %>
