<div class='container'>
  <div class="row">
      <div class="col-md-12">
        <h4 class="px-3 my-3 text-center col-md-3"><strong>配送先登録/一覧</strong></h4>
          <%= form_with model: @shipping_address, local:true do |f| %>
              <div class="shipping_address">
                  <div class="form-group col-md-10">
                    <%= f.label :"郵便番号(ハイフンなし)" ,class: "col-md-3 control-label" %>
                    <%= f.text_field :postcode, class: "col-md-4  postcode" %>
                  </div>

                  <div class="form-group col-md-10">
                    <%= f.label :"住所" ,class: "col-md-3 control-label" %>
                    <%= f.text_field :address, class: "col-md-7 address" %>
                  </div>

                  <div class="form-group col-md-10">
                    <%= f.label :"宛名" ,class: "col-md-3 control-label" %>
                    <%= f.text_field :name, class: "col-md-4 name" %>
                    <%= f.submit '新規登録' ,class: "col-md-2 offset-md-1  btn btn-success " %>
                  </div>
              </div>
          <% end %>
      </div>
  </div>


  <div class="row">
      <div class="col-md-12">
          <table class="table table-hover table-bordered">
          <thead>
            <tr class="address-info">
                <th class="col-md-2">郵便番号</th>
                <th class="col-md-6">住所</th>
                <th class="col-md-2">宛名</th>
                <th class="col-md-3"></th>
            </tr>
          </thead>
          <tbody>
              <% @shipping_addresses.each do |shipping_address| %>
                <tr>
                  <td class="col-md-2"><%= shipping_address.postcode %></td>
                  <td class="col-md-6"><%= shipping_address.address %></td>
                  <td class="col-md-2"><%= shipping_address.name %></td>
                  <td class="col-md-3">
                    <%= link_to "編集する", edit_shipping_address_path(shipping_address.id), class: 'btn btn-sm btn-success' %>
                    <%= link_to "削除する", shipping_address, method: :delete, class: "btn btn-sm btn-danger" %>
                  </td>
                </tr>
              <% end %>
          </tbody>
          </table>
          </div>
      </div>
  </div>
</div>