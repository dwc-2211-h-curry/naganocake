<p>登録情報</p>
  <div class='row'>
  <%= link_to information_edit_customers_path, class: "btn btn-lg btn-secondary" do %>
    <i class="fas fa-user-cog">編集する</i>
  <% end %>
</div>

<table class='table'>
  <tr>
	  <th>氏名</th>
	  <th><%= customer.last_name %>  <%= customer.first_name %></th>
  </tr>
  <tr>
	  <th>カナ</th>
	  <th><%= customer.last_name_kana %>  <%= customer.first_name_kana %></th>
  </tr>
  <tr>
	  <th>郵便番号</th>
	  <th><%= customer.postcode %></th>
  </tr>
  <tr>
	  <th>住所</th>
	  <th><%= customer.address %></th>
  </tr>
  <tr>
	  <th>電話番号</th>
	  <th><%= customer.phone_number %></th>
  </tr>
  <tr>
	  <th>メールアドレス</th>
	  <th><%= customer.email %></th>
  </tr>
</table>